// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("ADMIN") // ADMIN, USER (String porque SQLite no soporta enums)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones
  prestamosOperador Prestamo[] @relation("OperadorPrestamos")
  auditLogs         AuditLog[]
}

model Libro {
  id              String    @id @default(cuid())
  numero          Int?      // Número consecutivo (se calcula en la app)
  sigTop          String?   // SIG. TOP del CSV
  numeroRegistro  String?   // Código del CSV
  autor           String?   // NOMBRE AUTOR del CSV
  titulo          String    // TITULO LIBRO del CSV
  edicion         String?   // Edición del CSV
  cantidad        Int       @default(1) // Cant. del CSV
  disponible      Int       @default(1)
  fechaRegistro   DateTime? // Fecha de registro (opcional)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relaciones
  prestamos       Prestamo[]
}

model Prestamo {
  id                  String   @id @default(cuid())
  libroId             String
  usuarioId           String // Operador responsable
  nombrePrestatario   String  // Nombre del prestatario
  dni                 String  // DNI del prestatario (OBLIGATORIO)
  email               String? // Email del prestatario (opcional)
  fechaPrestamo       DateTime @default(now())
  fechaDevolucion     DateTime?
  fechaLimite         DateTime
  estado              String   @default("ACTIVO") // ACTIVO, DEVUELTO, VENCIDO (String porque SQLite no soporta enums)
  observaciones       String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  // Relaciones
  libro   Libro @relation(fields: [libroId], references: [id])
  operador User @relation("OperadorPrestamos", fields: [usuarioId], references: [id])
  
  @@index([libroId])
  @@index([usuarioId])
  @@index([estado])
  @@index([dni])
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String   // CREAR, ACTUALIZAR, ELIMINAR, DEVOLVER, etc.
  entity    String   // Prestamo, Libro, User, etc.
  entityId  String?  // ID de la entidad afectada
  usuarioId String   // Usuario que realizó la acción
  detalles  String?  // Información adicional
  createdAt DateTime @default(now())
  
  // Relaciones
  usuario User @relation(fields: [usuarioId], references: [id])
  
  @@index([usuarioId])
  @@index([entity])
  @@index([createdAt])
}
