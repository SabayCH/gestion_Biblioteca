// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones
  prestamos Prestamo[]
}

model Libro {
  id          String   @id @default(cuid())
  titulo      String
  autor       String
  isbn        String?  @unique
  editorial   String?
  anio        Int?
  categoria   String?
  descripcion String?
  cantidad    Int      @default(0)
  disponible  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relaciones
  prestamos   Prestamo[]
}

model Prestamo {
  id              String   @id @default(cuid())
  libroId         String
  userId          String
  fechaPrestamo   DateTime @default(now())
  fechaDevolucion DateTime?
  fechaLimite     DateTime
  estado          EstadoPrestamo @default(ACTIVO)
  observaciones   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relaciones
  libro Libro @relation(fields: [libroId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
  
  @@index([libroId])
  @@index([userId])
  @@index([estado])
}

enum Role {
  ADMIN
  USER
}

enum EstadoPrestamo {
  ACTIVO
  DEVUELTO
  VENCIDO
}